<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="22dp"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <View
        android:id="@+id/view"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="@drawable/red_rectangle" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.59dp"
        android:layout_marginEnd="15.5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="The Great Wall of China is visible from the moon"
            android:textColor="@color/reddish_brown" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textYouAnswered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="your answer: "
                android:textColor="@color/reddish_brown"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/youAnswered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="False"
                android:textColor="@color/reddish_brown"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>