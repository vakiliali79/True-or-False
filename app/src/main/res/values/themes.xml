<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Project2" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:navigationBarColor">@color/blue_purple</item>
        <item name="android:statusBarColor">@color/blue_purple</item>
        <item name="colorPrimary">#EEEDFC</item>
        <item name="colorAccent">@color/orange</item>

    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/orange</item> <!-- Customize the accent color for buttons -->
        <item name="android:buttonBarButtonStyle">@style/CustomButtonBarButtonStyle</item> <!-- Customize the button style -->
    </style>

    <style name="CustomButtonBarButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item> <!-- Customize the text color of the buttons -->
    </style>

    <style name="Theme.Project2" parent="Base.Theme.Project2" />
</resources>